<div class="row">
	<div class="col-sm-9">

		<h1>New Topic</h1>

		<%= form_for @topic do |f| %>

			<% if @topic.errors.any? %>
				<%= render partial: 'shared/error_message', locals: { object: @topic } %>
			<% end %>

			<div class="form-group">	
				<%= f.label :title %>
				<%= f.text_field :title, class: "form-control", autofocus: true, placeholder: "Enter title" %>
			</div>

			<div class="form-group">	
				<%= f.submit "Save Topic", class: "btn btn-success" %>
			</div>

		<% end %>

	</div>
</div>
