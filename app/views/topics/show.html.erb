
<%#= link_to "Create New Bookmark", new_topic_bookmark_path(@topic), class: "btn btn-success" %>

<h1><%= @topic.title %></h1>

	<div class="row col-sm-12">

		<% if @bookmarks.any? %>
			<h4>Bookmarks</h4>
			<%= render partial: 'bookmarks/bookmark', collection: @bookmarks %>				

		<% else %>
			<h4>No bookmark available</h4>
		<% end %>

	<%= link_to "Create New Bookmark", new_topic_bookmark_path(@topic), class: "btn btn-primary" %>

	</div>


