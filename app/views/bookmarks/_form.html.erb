<div class="row">
	<div class="col-sm-9">
		<!-- <h1>Create new Bookmark</h1> -->

		<%= form_for [@topic, @bookmark] do |f| %>

			<% if @bookmark.errors.any? %>
				<%= render partial: 'shared/error_message', locals: { object: @bookmark } %>
			<% end %>
			
			<div class="form-group">
				<%= f.label :url %>
				<%= f.text_field :url, class: "form-control", autofocus: true, placeholder: "Enter url" %>
			</div>

			<div class="form-group">
				<%= f.submit class: "btn btn-primary" %>
			</div>

		<% end %>

	</div>
</div>
